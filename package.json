{
  "name": "A-Note",
  "version": "0.0.7",
  "private": true,
  "description": "The main site for all things A-Note.01.01.2018",
  "homepage": "https://github.com/A-Note",
  "author": "Karmov Marat",
  "license": "MIT",
  "main": "n/a",
  "keywords": [
    "Note",
    "build",
    "tool"
  ],
  "engines": {
    "node": ">=6.9"
  },
  "scripts": {
    "start_build": "webpack  -p --progress --config webpack.config.production.js",
    "start_dev": "webpack-dev-server --watch  --config webpack.config.development.js",
    "start_devexp": "webpack-dev-server --watch  --config webpack.config.devexperiment.js",
    "clean_build": "rm -rf ./build && mkdir ./build",
    "build-2": "webpack --config webpack-production.config.js",
    "start-2": "webpack-dev-server --config webpack-dev-server.config.js",
    "start-3": "webpack-dev-server --env development",
    "build-3": "webpack --env production",
    "start-s": "webpack --watch",
    "clean": "rimraf ./dist",
    "start": "npm run init:generated && npm run fetch && node ./antwar.bootstrap.js develop",
    "start-only": "node ./antwar.bootstrap.js develop",
    "build": "npm run init:generated && npm run fetch && rm -rf build/ && node ./antwar.bootstrap.js build && npm run sitemap && echo webpack.js.org > build/CNAME",
    "build-test": "npm run build && http-server build/",
    "deploy": "gh-pages -d build",
    "fetch": "sh src/scripts/fetch.sh",
    "init:generated": "mkdirp ./generated/loaders && mkdirp ./generated/plugins ",
    "lint": "run-s lint:*",
    "lint:js": "eslint . --ext .js --ext .jsx",
    "lint:markdown": "markdownlint --config ./.markdownlint.json *.md ./src/content/**/*.md",
    "lint:social": "alex . -q",
    "lint:prose": "cp .proselintrc ~/ && proselint src/content",
    "test": "npm run lint",
    "sitemap": "cd build && sitemap-static --prefix=https://webpack.js.org/ > sitemap.xml"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.3.0",
    "css-loader": "^0.28.8",
    "eslint": "4.7.2",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "moment": "^2.20.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.1",
    "optimize-css-assets-webpack-plugin": "3.2.0",
    "parallelshell": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "uglify-es": "^3.3.4",
    "uglifyjs-webpack-plugin": " 1.1.6",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.0",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-bootstrap": "^0.32.0",
    "react-dom": "^15.6.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 5 versions",
    "Firefox ESR"
  ]
}
